@{
    var nextText = "Next";
    if(ViewBag.LastStep != null && (bool)ViewBag.LastStep == true)
    {
        nextText = "Finish";
    }
}

<div id="WizardNavigation">
    <ul>
      
            <li>&nbsp;
              @if (ViewBag.Previous != null)
              {
                  <a href="@ViewBag.Previous" class="button">Prev</a>
              }
            </li>
        @if (ViewBag.ListPage == null)
        {
            <li>
                <a href="@ViewBag.Skip" class="">Skip</a>
            </li>
        } else
        {
         <li>
            <a href="@ViewBag.Next" class="">Skip</a>
         </li>   
        }
        
        <li>
            <a href="@Url.Action("Index", "Workgroup")" class="">Exit</a>
        </li>
        <li>
            @if(ViewBag.ListPage != null && (bool)ViewBag.ListPage)
            {
                <a href="@ViewBag.Next" class="button">@nextText</a>
            }
            else
            {
                <input class="button" type="submit" value="@nextText" />
            }
        </li>
    </ul>
    <div class="clear">&nbsp;</div>
</div>





