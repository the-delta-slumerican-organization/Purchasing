@using Purchasing.Core.Domain
@model IEnumerable<Account>
<script id="accounts-select-template" type="text/x-jquery-tmpl">
    <div class="account-container">
        <select class="account-number" id="splitAccount" name="splits[${index}].Account">
            <option value="">--Account--</option>
            @foreach (Account account in Model)
            {
                <option>@account.Id</option>
            }
        </select>
        <select name="splits[${index}].SubAccount" class="account-subaccount" disabled="disabled"><option value>--Sub Account--</option></select>
        <input name="splits[${index}].Project" type="text" placeholder="Project" class="account-projectcode" maxlength="4"/>
        <img src="@Url.Image("details.png")" class="search-account"/>
    </div>
</script>