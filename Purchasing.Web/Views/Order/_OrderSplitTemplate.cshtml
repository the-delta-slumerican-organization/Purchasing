        <td>{{tmpl "#accounts-select-template"}}</td>
        <td class="account-split-amounts">
                $<input name="splits[${index}].amount" type="text" placeholder="amt" class="order-split-account-amount" title="Dollar amount for this account. Will also auto-calculate a percentage."/>
                   
