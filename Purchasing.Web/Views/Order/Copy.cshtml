@model OrderModifyModel

@{
    ViewBag.Title = "Copy";
}

@{
    Bundles.Reference("~/Css/single/fileuploader/fileuploader.css");
    Bundles.Reference("~/Css/single/chosen.css");
    Bundles.Reference("~/Css/single/orderrequest.css");
    
    Bundles.Reference("scripts/public/order");
}

@section AdditionalScripts{
    
    <script type="text/javascript">

        $(function () {
            @Html.Partial("_Options")

            purchasing.init(); //Init all base order form js

            purchasing.initCopy(); //Add in the edit functionality
        });

    </script>
    
        <style type="text/css">
        .single-column {width: 1215px;}
        .orders-right {width: 995px;}

        form input.quantity[type="text"] {width: 50px;}
        form input.description[type="text"] {min-width: 300px; width: 90%;}
        form input.price[type="text"], #shipping, #tax, #freight {width: 60px;}
        form input.catalog-num[type="text"] { width: 106px;}
        
        #order-account-section .details-option {width: 30%;}
    </style>
}

@Html.Partial("_SideNavigation")

<div class="orders-right">
@using (Html.BeginForm("Copy", "Order", new { Model.Order.Id }, FormMethod.Post, new { id = "order-form" }))
{
    <input data-bind="value: adjustRouting" id="adjustRouting" name="adjustRouting" type="hidden" />

    @Html.Partial("_OrderForm")
}
</div>

@Html.Partial("_OrderTemplates")

@Html.Partial("_ItemModificationTemplate")

@Html.Partial("_OrderDialogs")