<section data-bind="visible: showForSplit('Order')" id="order-split-section" class="" style="display: none;">
    <header class="ui-widget-header ui-corner-top">
            <div class="col1">Order Account Splits</div>
            <div class="col2"><a href="#" title="Click here to learn all about entering order details" id="orderDetails-intro" data-tourid="orderDetails-intro" class="ui-icon ui-icon-help tour-help"></a><div style="clear:both;"></div></div>
    </header>

    <div class="section-contents">
        
        <div class="section-text">
            <p>
                Please enter the accounts and the distribution percent for each split line.
            </p>
        </div>

        <table id="order-splits">
            <tbody data-bind="template: {name: 'order-split-template', foreach: splits}"></tbody>
            <tfoot>
                <tr>
                    <td colspan="2"><a href="#" id="add-order-split" class="biggify" style="float:right;" ><span class="biggify">+</span> Add Split</a></td>
                </tr>
            </tfoot>
        </table>

        <table class="order-split-totals">
        <tr>
        <td>Split Total</td>
        <td><span id="order-split-account-total">$0.00</span></td>
        </tr>
        <tr class="red">
        <td>Unaccounted</td>
        <td><span id="order-split-account-difference" class="amount-difference"></span></td>
        </tr>
        <tr>
        <td>Order Total</td>
        <td><span data-bind="text: grandTotal" id="order-split-total">$0.00</span></td>
        </tr>
        </table>
    </div>
    <footer>
        <div class="col1"><a href="#" id="cancel-order-split" class="button" >Cancel Order Split</a><div style="clear:both;"></div></div>
        <div class="col2"></div>
    </footer>
</section>