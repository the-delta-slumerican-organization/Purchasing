<div id="address-dialog" title="Add Shipping Address">
    <form id="address-form">
    <div class="section-contents">
        <div class="section-text">
            <p>
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh
                euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
        </div>
        <ul>
            <li>
                <div class="editor-label">
                    Name:</div>
                <div class="editor-field">
                    <input id="address-name" name="address-name" type="text" placeholder="Address Name"
                        class="required" maxlength="50" />
                    <span data-valmsg-for="address-name" data-valmsg-replace="true"></span>
                </div>
            </li>
            <li>
                <div class="editor-label">
                    Building:</div>
                <div class="editor-field">
                    <input id="address-building" name="address-building" type="text" placeholder="Building"
                        class="required" maxlength="50" />
                    <span data-valmsg-for="address-building" data-valmsg-replace="true"></span>
                </div>
            </li>
            <li>
                <div class="editor-label">
                    Room:</div>
                <div class="editor-field">
                    <input id="address-room" name="address-room" type="text" placeholder="Room" class="required"
                        maxlength="50" />
                    <span data-valmsg-for="address-room" data-valmsg-replace="true"></span>
                </div>
            </li>
            <li>
                <div class="editor-label">
                    Address:</div>
                <div class="editor-field">
                    <input id="address-address" name="address-address" type="text" placeholder="Address"
                        class="required" maxlength="100" />
                    <span data-valmsg-for="address-address" data-valmsg-replace="true"></span>
                </div>
            </li>
            <li>
                <div class="editor-label">
                    City:</div>
                <div class="editor-field">
                    <input id="address-city" name="address-city" type="text" placeholder="City" class="required"
                        maxlength="100" />
                    <span data-valmsg-for="address-city" data-valmsg-replace="true"></span>
                </div>
            </li>
            <li>
                <div class="editor-label">
                    State:</div>
                <div class="editor-field">
                    <input id="address-state" name="address-state" type="text" placeholder="State" class="required"
                        maxlength="2" />
                    <span data-valmsg-for="address-state" data-valmsg-replace="true"></span>
                </div>
            </li>
            <li>
                <div class="editor-label">
                    Zip:</div>
                <div class="editor-field">
                    <input id="address-zip" name="address-zip" type="text" placeholder="Zip" class="required"
                        maxlength="10" />
                    <span data-valmsg-for="address-zip" data-valmsg-replace="true"></span>
                </div>
            </li>
            <li>
                <div class="editor-label">
                    Phone:</div>
                <div class="editor-field">
                    <input id="address-phone" name="address-phone" type="text" placeholder="Phone Number"
                        maxlength="15" />
                    <span data-valmsg-for="address-phone" data-valmsg-replace="true"></span>
                </div>
            </li>
        </ul>
    </div>
    </form>
</div>
