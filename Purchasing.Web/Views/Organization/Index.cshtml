@model IEnumerable<Purchasing.Core.Domain.Organization>

@{
	ViewBag.Title = "Administer Orgs";
}

@section SubNav
{
}


<table class='dt-table'>
	<thead>
		<tr>
			<th></th>
			<th>
				Name
			</th>
			<th>
				TypeCode
			</th>
			<th>
				TypeName
			</th>
			<th>
				IsActive
			</th>

		</tr>
	</thead>
	<tbody>
@{ var odd = false; }
@foreach (var item in Model) {
		<tr class="@(odd ? "odd": "even")">
			<td>
				<a href='@Url.Action("Details", new {id=item.Id})'>
					<img src='@Url.Image("details.png")' />
				</a>
				<a href='@Url.Action("Edit", new {id=item.Id})'>
					<img src='@Url.Image("edit.png")' />
				</a>
			</td>
			<td>
				@item.Name
			</td>
			<td>
				@item.TypeCode
			</td>
			<td>
				@item.TypeName
			</td>
			<td>
				@(item.IsActive ? "Yes" : "No")
			</td>	
		</tr>
		odd = !odd;
}
	</tbody>
</table>
