@model IEnumerable<Purchasing.Core.Domain.Workgroup>

@{
	ViewBag.Title = "Index";

}

<table class="datatable">
	<thead>
		<tr>
			<th></th>

			<th>
				Name
			</th>

			<th>
				IsActive
			</th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
                @Html.ActionLink("Manage", "Manage", "WorkgroupManagement", new { id = item.Id }, null)
			</td>

			<td>
				@item.Name
			</td>
			<td>
				@item.IsActive
			</td>
		</tr>
}
	</tbody>
</table>