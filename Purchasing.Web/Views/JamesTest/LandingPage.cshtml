@section AdditionalScripts{
    
    <style>
        div.workgroup-info
        {
            border: 1px solid #CCCCCC;
            padding: 1em;
            width: 200px;
            float: left;
            margin-right: 20px;
            cursor: pointer;            
        }
        div.workgroup-info:hover
        {
           -moz-box-shadow:inset 0 0 10px lightblue;
           -webkit-box-shadow:inset 0 0 10px lightblue;
           box-shadow:inset 0 0 10px lightblue;
        }
        div.workgroup-info ul
        {
            padding: 0;
        }
        div.workgroup-info ul li
        {
            text-align: center;
        }
        .prop-name
        {
            padding: 1em;
            color: White;
            font-weight: bold;
        }
        .prop-value
        {
            font-size: large;
            font-weight: bold;
            padding-top: 1em;
        }
    </style>

    <script type="text/javascript">

        $(function () {

            $('input[type=checkbox]').tzCheckbox({ labels: ['Newest Open Orders', 'Oldest Open Orders'] });

            $("#list-selector").change(function () {

                $(".order-list").toggle();

            });

        });

    </script>
}


<section class="display-form ui-corner-all box-shadow">

    <header class="ui-corner-top">Workgroup Associations</header>

    <div class="section-contents">

        @ContainerFor("Your Open Orders", Model.YourOpenRequestCount)
        @ContainerFor("Overdue Orders", Model.YourNotActedOnCount)       
        @ContainerFor("Pending Your Action", Model.OrdersPendingYourActionCount)


        <div style="clear: both;"></div>

    </div>

</section>

<section class="display-form ui-corner-all box-shadow">
    <header class="ui-corner-top">
        <div class="col1"><h3>Top 5 Orders</h3></div>
        <div class="col2">
            <input type="checkbox" id="list-selector" class="custom-checkbox"/>
        </div>
    </header>

    <div class="section-contents">
        <span id="oldestList" class="order-list"> @Html.Partial("_Orders", Model.OldestFOLM)</span>
        <span id="newestList" class="order-list" style="display: none"> @Html.Partial("_Orders", Model.NewestFOLM)</span>
    </div>
</section>

<section class="display-form ui-corner-all box-shadow">
   <header class="ui-corner-top">
        <div class="col1"><h3>Last 5 Orders You've Acted On</h3></div>
   </header>

   <div class="section-contents">
    @Html.Partial("_Orders", Model.LastFiveFOLM)
   </div>
</section>


