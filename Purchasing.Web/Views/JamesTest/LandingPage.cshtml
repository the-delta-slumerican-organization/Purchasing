@model Purchasing.Web.Controllers.LandingPageViewModel

@{
	ViewBag.Title = "Landing Page";
}

@helper ContainerFor(string name, int count, string action = null){

    <a href="@Url.Action(action ?? name, "JamesTest")">

    <div class="workgroup-info gradientbackground ui-corner-all box-shadow @(count > 5 ? "box-red-innershadow" : string.Empty)">
        
        <ul>
        
            <li class="prop-name ui-corner-all border-all blue-gradientbackground">@name</li>

            <li class="prop-value">@count
            </li>

        </ul>
        
    </div>
    </a>
}

