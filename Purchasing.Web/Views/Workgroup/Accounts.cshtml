@using Purchasing.Core.Domain
@model Workgroup
@{
    ViewBag.Title = "Workgroup Accounts";
}

@section AdditionalScripts{

}

@section SubNav
{
    <ul class="navigation">
        <li><a href='@Url.Action("AddAccount", new {id = Model.Id})'>Add Accounts</a></li>
        <li><a href="@Url.Action("Details", new {id=Model.Id})">Back to Workgroup</a></li>
    </ul>
}

<table class='dt-table'>
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Approver</th>
            <th>Manager</th>
            <th>Purchaser</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @{ var odd = false; }
        @foreach (var item in Model.Accounts)
        {
            <tr class="@(odd ? "odd" : "even")">
                <td>
                    <a href='@Url.Action("AccountDetails", new {id = item.Id})'>
                        <img src='@Url.Image("details.png")' />
                    </a>
                    <a href='@Url.Action("EditAccount", new {id = item.Id})'>
                        <img src='@Url.Image("edit.png")' />
                    </a>
                </td>
                <td>@item.Account.Name</td>
                <td>@item.Approver.FullName</td>
                <td>@item.AccountManager.FullName</td>
                <td>@item.Purchaser.FullName</td>
                <td>
                    <a href='@Url.Action("AccountDelete", new {id = item.Id})'>
                        <img src='@Url.Image("delete.png")' />
                    </a>
                </td>
            </tr>
            odd = !odd;
        }
    </tbody>
</table>