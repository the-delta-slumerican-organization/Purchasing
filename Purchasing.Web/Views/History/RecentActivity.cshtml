@using Purchasing.Web.Helpers
@model Purchasing.Core.Domain.Order

@if (Model == null)
{
    <p>No recent activity here!</p>
    <p>@Html.ActionLink("Request a new order >", "SelectWorkgroup", "Order")</p>
}
else {
    <p><span class="time-ago">@string.Format("{0} ago,", (DateTime.Now - Model.DateCreated).ToLongString())</span> you worked on</p>
    <p class="order-details">@Html.ActionLink(Model.OrderRequestNumber(), "Review", "Order", new { id = Model.Id }, new { })
        <span class="requester">@Model.CreatedBy.FullName</span> requested: <span class="order-summary">@Model.LineItemSummary()</span></p>
    <p>@Html.ActionLink("View the order >", "Review", "Order", new { id = Model.Id }, new { })</p>
}