@using Purchasing.Core.Domain
@model Workgroup
@{
    ViewBag.Title = "Workgroup Accounts";
    ViewBag.StepName = "Add Account";
}

@section AdditionalScripts{

}

@section SubNav
{
    @Html.Partial("_StatusBar")
}
<table class='dt-table no-icon-table'>
    <thead>
        <tr>            
            <th>Name</th>
            <th>Approver</th>
            <th>Manager</th>
            <th>Purchaser</th>
        </tr>
    </thead>
    <tbody>
        @{ var odd = false; }
        @foreach (var item in Model.Accounts)
        {
            <tr class="@(odd ? "odd" : "even")">                
                <td>@item.Account.Name</td>
                <td>@item.Approver.FullNameAndId</td>
                <td>@item.AccountManager.FullNameAndId</td>                
                <td>@item.Purchaser.FullNameAndId</td>
            </tr>
            odd = !odd;
        }
    </tbody>
</table>