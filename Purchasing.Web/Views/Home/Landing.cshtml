@model Purchasing.Web.Models.LandingPageViewModel
@{
    ViewBag.Title = "PrePurchasing Home";
    ViewBag.SingleColumn = false;
}

@helper ContainerFor(string name, int count, string filter = null){
    <a href="@Url.Action("Order")">

        <div class="ui-corner-all @(count > 5 ? "warning-box ui-state-error" : "notification-box ui-state-highlight")">
            <span class="ui-icon @(count > 5 ? "ui-icon-alert" : "ui-icon-info")"></span>
            @name @count
        
        </div>
    </a>
}

@section AdditionalScripts{
    
    <style>
        .warn { color: red; }
        .col1-15 {width: 14.5%;display: inline-block;float: left;margin-right: 8px;}
        .col2-15, .col3-15, .col4-15 {width: 27.5%;display: inline-block;float: left;margin-right: 8px;}
    </style>
    
    <script id="row-template" type="text/x-jquery-tmpl">
        <tr class="${EvenOdd}">
            <td>${FullNameAndId}</td>
            <td>${Pending}</td>
            <td>${Completed}</td>
        </tr>
    </script>
    
    <script type="text/javascript">
        $(function() {
            $(".table-filter-rb").click(function() {
                var url = '@Url.Action("RequestAmountSummaryCall")';

                $.getJSON(url, { filter: $(this).data("id") }, function(result) {
                    $("#costSummary tbody").empty();

                    $("#row-template").tmpl(result).appendTo("#costSummary tbody")
                });
            });
        });
    </script>

}


<div class="col1-50">

        <div class="display-form ui-corner-all box-shadow">
    
            <header class="ui-widget-header ui-corner-top">Top 5 Oldest Orders</header>

            <div class="section-contents">
                @Html.Partial("_OrdersNoDataTable", Model.OldestFOLM)

            </div>

        </div>

    </div>

<div class="col-50-left">

    <div class="display-form ui-corner-all box-shadow">
    
        <header class="ui-widget-header ui-corner-top">Top 5 Newest Orders</header>

        <div class="section-contents">
        
            @Html.Partial("_OrdersNoDataTable", Model.NewestFOLM)

        </div>

    </div>

</div>

<div class="col1-50">

    <div class="display-form ui-corner-all box-shadow">
    
        <header class="ui-widget-header ui-corner-top">Last 5 orders you have acted on</header>

        <div class="section-contents">
        
            @Html.Partial("_OrdersNoDataTable", Model.LastFiveFOLM)

        </div>

    </div>

</div>

<div class="col2-20">


    <div class="display-form ui-corner-all box-shadow">
    
        <header class="ui-widget-header ui-corner-top">Workgroup Associations</header>

        <div class="section-contents">
            @ContainerFor("Open Orders: ", Model.YourOpenRequestCount)
            @ContainerFor("Orders Not Acted On: ", Model.YourNotActedOnCount)
            @ContainerFor("Orders pending your action: ", Model.OrdersPendingYourActionCount)

    </div>

</div>

    @if(@ViewBag.ShowRequestorSummaryTotals != null && @ViewBag.ShowRequestorSummaryTotals == true)
    {
        <div class="col3-25">


            <div class="display-form ui-corner-all box-shadow">
    
                <header class="ui-widget-header ui-corner-top">Requester Summary Order Totals</header>

                <div class="section-contents">
                    <div>
                        <input type="radio" class="table-filter-rb" name="Filter" data-id="A" /> All
                        <input type="radio" class="table-filter-rb" name="Filter" data-id="Y" /> Year
                        <input type="radio" class="table-filter-rb" name="Filter" data-id="M" checked="checked" /> Month
                        <input type="radio" class="table-filter-rb" name="Filter" data-id="W" /> Week
                    </div>
                    <table id="costSummary" class="no-icon-table">
                        <thead>
                            <tr>

                                <th>
                                    Name
                                </th>

                                <th>
                                    Pending
                                </th>

                                <th>
                                    Completed
                                </th>
			
                            </tr>
                        </thead>
                        <tbody>
                            @{ var odd = false; }
                            @foreach(var item in Model.RequesterTotals)
                            {
                                <tr class="@(odd ? "odd" : "even")">

                                    <td>
                                        @item.FullNameAndId
                                    </td>

                                    <td>
                                        @item.Pending
                                    </td>

                                    <td>
                                        @item.Completed
                                    </td>
                                </tr>
                                odd = !odd;
                            }
                        </tbody>
                    </table>

                </div>

            </div>

        </div>
    }