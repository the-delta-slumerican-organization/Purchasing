        }
    </style>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $(".tip").qtip({
                show: {
                    event: 'mouseenter focus',
                    ready: false
                },
                hide: {
                    event: 'mouseleave blur'
                },
                position: {
                    my: 'bottom center',
                    at: 'top center'
                }
            });
        });
    </script>
    
}

