<!DOCTYPE html>
<html lang="en">
<head>
	<title>Purchasing - @ViewBag.Title</title>

	<meta name="description" content="">
	<meta name="author" content="">
    
    <link type="text/plain" rel="author" href="@Url.Content("~/humans.txt")" />
    
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")">
    
    @{
        Bundles.Reference("~/Css/site.css");
        Bundles.Reference("~/Css/jquery-ui-1.8.16.caes.css");
        Bundles.Reference("~/Css/custom.css");
        Bundles.Reference("~/Css/jquery.qtip.min.css");
        Bundles.Reference("~/Css/jquery.tzCheckbox/jquery.tzCheckbox.css");
    }
    
    @Bundles.RenderStylesheets()

    @*    <link href="@Url.Css("site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Css("jquery-ui-1.8.16.caes.css")" rel="stylesheet" type="text/css" />
