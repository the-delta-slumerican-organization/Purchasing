@model Purchasing.Core.Domain.User

@{
    ViewBag.Title = "Profile for " + Model.FullName;
}

<section class="display-form ui-corner-all">

    <header class="ui-corner-top ui-widget-header">Profile Information</header>

        <div class="section-text"><p>Modify your account status and preferences using the links below.</p></div>

    <div class="section-contents">
    

        <ul>
            <li>@Html.ActionLink("Update Email Preferences", "EmailPreferences", "User", new { id = Model.Id }, null)</li>            
            <li>@Html.ActionLink("Update Column Preferences", "ColumnPreferences", "User", new { id = Model.Id }, null)</li>
            <li>@Html.ActionLink("Set Away Status", "AwayStatus", "User", new { id = Model.Id }, null)</li>
        </ul>
    </div>

</section>