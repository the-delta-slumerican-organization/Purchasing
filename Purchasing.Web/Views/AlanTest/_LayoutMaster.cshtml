    <style type="text/css">
    
   /* ---------------- */
    /*    reset         */
    /* ---------------- */
    * {padding:0; margin:0; font-family: Helvetica; }
    a img {border:none;}
    #branding, .main, #footer, #navigation-bar, .body-container {padding: 0 20px;}    
    body, .main {background-color: #F1F1F1;}
        
    /* ---------------- */
    /*    branding      */
    /* ---------------- */
    #branding {
	    /* fallback */
	    background: url(../Images/top_blue_bar.jpg) repeat-x #014a81; margin: 0 auto; position:relative;
	
	    /* Firefox 3.6+ */
	    background: -moz-linear-gradient(0% 20% 90deg,#024B82, #002359);
	
	    / * Safari 4-5, Chrome 1-9 */
	    background: -webkit-gradient(linear, 0% 0%, 0% 20%, from(#002359), to(#024B82));
    }
    #branding span.header {padding: 2em 0 0.2em 0; margin: 0px auto; display: block;}
    #branding h1 {text-align:left; font-size:3em; line-height:1em; padding-bottom:.2em;}
    #branding {color:#FFF; display:block;}
    #branding a:hover {color: #E4B939;}
    #branding a {color: #FFF; text-decoration: none; font-weight: bold;}
    #branding nav a.currentpage {color: #E4B939;}


    /* ---------------- */
    /*    footer        */
    /* ---------------- */
    #footer {background-color:#014a81; padding:1em 0; margin-top:5em; display: block;}
    #footertext {margin:0 auto; color:#FFFFFF; font-size:0.9em; padding: 0 20px;}
    #footer small { margin-top: .5em; padding-top: .5em; border-top: 1px solid white; display: block; }
    #footer .navigation-list { margin: 0 5px;}
    
    #footertext a {color:#FFFFFF; text-decoration:none;}
    #footertext a:hover {color:#E4B939;}
    #footertext ul li {list-style-type:none; display:inline-block; text-align:left;}
    #footertext .col2 ul li {list-style-type:none; display:block; text-align:left;}
    #footertext nav {display:inline-block;}
    #footer .col1 .navigation li a{border-bottom:2px solid #074F84; width:200px; padding-left:10px; display:block;}
    #footer .col1 .navigation li a:hover {background-color:#074F84;}
    #footer .col2 {vertical-align:top; font-style:italic;}
    #footer .col1 {border-right:2px solid #074F84;}
    #footer .navigation {text-align:left;}
    
    /* ---------------- */
    /*    columns       */
    /* ---------------- */    
    .col1-50, .col2-50 { width: 49%; display: inline-block; vertical-align:top;}
    .col2-50 {text-align: right;}
    .col1-33, .col2-33, .col3-33 { width: 32.5%; display: inline-block; float: left; }
    .col1-33, .col2-33 { margin-right: 10px; }
    
    .left-bar { width: 250px; display: inline-block; float: left; }
    .right-window { display: inline-block; float: left; margin-left: 20px; }
    
    /* ---------------- */
    /*  Personal Bar    */
    /* ---------------- */        
    #personalbar, #personalbar a {font-weight: normal; text-decoration: none; vertical-align: bottom; font-size: small; }
    #personalbar div { display: inline-block; }
    #username, #settings, #logout { margin: 0 10px; text-align:left;}
    #settings { width:60px;}
    
    /* ---------------- */
    /*  Navigation Bar  */
    /* ---------------- */ 


    #navigation-bar {
        display: block;
        z-index:100;	
        height: 40px; 
        background-image:-moz-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-webkit-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-ms-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-o-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-webkit-gradient(linear, right top, right bottom, color-stop(0%,#DDDDDD), color-stop(100%,#C2C2C2));}
/* --------------------------------------------------------------------------
    #navigation-bar {         display: block; 
        height: 40px; 
        background-image:-moz-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-webkit-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-ms-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-o-linear-gradient(top, #DDDDDD 0%, #C2C2C2 100%);
        background-image:-webkit-gradient(linear, right top, right bottom, color-stop(0%,#DDDDDD), color-stop(100%,#C2C2C2));}
   -------------------------------------------------------------------------- */
    #navigation-bar ul { list-style: none; }
    #navigation-bar li { padding: 11px 10px; color: white; display:inline-block; vertical-align:top;}
    #navigation-bar li li { padding: 11px 10px 11px 0px; color: white; display:inline-block; vertical-align:top;}
    #navigation-bar li a { text-decoration: none; color: black; }
    /* #navigation-bar li>ul {display: none;} */

   #navigation-bar li:hover { -moz-transition: background-color 0.5s linear; background-color: #E3E3E3; }
   #navigation-bar li:hover>ul {display:block;}
   #navigation-bar li:hover a {color: black;}

   .drop-down-menu:hover { -moz-transition: background-color 0.5s linear; background-color: #E3E3E3; }
   .drop-down-menu:hover a { color: black; }
   .drop-down-menu>ul {margin-top:4px; display: none;}
   /* .drop-down-menu>ul {} */
   /* .drop-down-menu:hover>ul { background-color: #DDDDDD;} */

    #settings-nav { position: absolute; top: 75px; right: 73px; }
    #orders-btn-nav { position: absolute; top: 123px; left: 90px; }
    #administration-btn-nav { position: absolute; top: 123px; left: 340px; }
    #personalbar, #personalbar div {vertical-align:top;}
    #settings ul {display:none;}
    #settings:hover ul{display:block;}
    #settings ul {list-style-type: none;padding: 0px;margin: 0px;}
    #settings li {vertical-align:top; width:150px; text-align:left; margin-top:5px;}

    /* ---------------- */
    /*  Containers      */
    /* ---------------- */ 
    form section, .display-form { margin-bottom: .5em; display: block; background-color: white; 
        background: #fff;
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f2f5f6', endColorstr='#c8d7dc',GradientType=0 ); /* IE6-9 */
    }
    form section header, .display-form header { padding: .5em 10px; border: none; }
    form section .section-contents, .display-form .section-contents { padding: .5em 20px;}

    .title { display: block; border-bottom: dotted 1px #BBBBBB; margin: 1em 0; padding-bottom: .5em; }
    .notification-box, .warning-box { margin: 1em .5em; padding: .75em; }
    .notification-box .ui-icon, .warning-box .ui-icon { float: left; margin-right: .3em; }

    .box-shadow
    {
        -moz-border-radius: 5px;
        border-radius: 5px;
        -moz-box-shadow: 5px 5px 5px #DDDDDD;
        -webkit-box-shadow: 5px 5px 5px #DDDDDD;
        box-shadow: 5px 5px 5px #DDDDDD;   
    }

    /* ---------------- */
    /*  Search Box      */
    /* ---------------- */     
    #search-container { float: right; background: white; margin-right: 20px; margin-top: 7px;}
    #search-container input { border: none;}
    #search-container img { height: 19px;} 
    #search-container li {padding:3px;}
    #navigation-bar #search-container li:hover {background-color: white; }
    
    /* ---------------- */
    /*    table         */
    /* ---------------- */
    table {border:1px solid #003054; border-collapse: collapse; margin:0.5em 0; width:100%;}
    th{text-align:left;}
    thead tr, tfoot tr  {background-color:#014A81; color:#FFFFFF;}
    .main thead a, .main tfoot a {color:#FFFFFF; font-weight:bold;}
    .main thead a:hover, .main tfoot a:hover {color:#E4C466;}
    td, th { padding:0.5em;}
    td {vertical-align:top; line-height:1.5em;}
    .table_select {}
    .table_edit{}
    .even {background-color:#F0F0F0;}
    .odd {}
    .even:hover, .odd:hover {background-color:#d0e3f1;}
    tr  > td:first-child {width:55px; text-align:center;}
    tr > td:last-child {width:40px; text-align:center;}
    tfoot tr  > td:first-child {text-align:left;}
    tfoot tr > td:last-child {text-align:right;}
    tfoot {text-align:center;}
    .noicon tr  > td:first-child,.noicon tr > td:last-child {width:auto; text-align:left;}
    .nofirsticon tr > td:first-child {width: auto; text-align: left;}
    .nolasticon tr > td:last-child {width: auto; text-align: left;}

    table .table-bool-bad {color: red;}
    table .table-bool-good {color:green;}

    </style>

	@RenderSection("AdditionalScripts", false)

</head>
<body>
	<div class="wrapper">
	
		@Html.Partial("_ServiceMessages")
	
		<header id="branding">
			
			<!-- Application's Name -->
			<span class="header">

                <div class="col1-50">
				@*<h1>Purchasing</h1>*@

                <img src='@Url.Image("PrePurchasing-Logo.png")' alt="UCD PrePurchasing" style="height: 60px;"/>

				</div>
                
                <div class="col2-50">
                <div id="personalbar">
                    
                    <div id="username"  class="navigation-list">Hello @User.Identity.Name</div> |
                    <div id="settings" class="navigation-list">
                        Settings
                        <ul>
                            <li>@Html.ActionLink("Email Preferences", "EmailPreferences", "User")</li>
                            <li>@Html.ActionLink("Away Status", "AwayStatus", "User")</li>
                        </ul>    
                    </div> |
                    <div id="logout" class="navigation-list">@Html.ActionLink("Logout", "LogOut", "Account")</div>

                    

                </div>
                </div>
			</span>
				
		</header>

        <nav id="navigation-bar">
  
            <div class="col1-50">
            <ul>
            
                <li><a href="@Url.Action("Index")">Home</a></li>
                <li class="drop-down-menu"><a href="#">Orders</a>
                
                    <ul>
                        <li><a href="#">Place Order</a></li>
                        <li><a href="@Url.Action("Orders")">Order Hisotry</a></li>
                        <li><a href="#">Administrative Orders</a></li>
                    </ul>
                
                </li>
                <li><a href="#" class="navigation-button">Administration</a></li>

            </ul>
            <div style="clear: both;"></div>
            </div>

            <div class="col2-50">
            
            <ul id="search-container" style="float:right;">
            <li>
                <input type="search"/>
                <img src="@Url.Image("Sample/search-icon.png")"/>
            </li>
            </ul>
            </div>

            

@*            <div class="nav-button">Home</div>
            <div id="orders-btn" class="nav-button">Place New Order</div>
            <div class="nav-button">Order History</div>
            <div id="administration-btn" class="nav-button">Administration</div>
        
            <ul id="orders-btn-nav" class="nav-list">
                <li><a href="#">Place New Order</a></li>
                <li><a href="#">Order History</a></li>
            </ul>

            <ul id="administration-btn-nav" class="nav-list">
                <li><a href="#">Administrators</a></li>
                <li><a href="#">Lookups</a></li>
            </ul>

            <div id="search-container">
            
                <input type="search" placeholder="Search Order"/>
                <img src="@Url.Image("Sample/search-icon.png")"/>

            </div>*@

        </nav>
        
			
		<div class="main">
			
			<header>
				
				@if(!string.IsNullOrWhiteSpace(TempData["ErrorMessage"] as string)){ 
				<div id="error-message">
					@TempData["ErrorMessage"]
				</div>
				}
                    				
				@if (!string.IsNullOrWhiteSpace(TempData["Message"] as string)) { 
				<div id="status-message">
					@TempData["Message"]
				</div>
				}
				
				<div class="col1">
					<h2>@ViewBag.Title</h2>
					<h3>@ViewBag.SubTitle</h3>
				</div>
					
				<nav class="col2">
					@*Sub Page Navigation*@
					@RenderSection("SubNav", false)
				</nav>
				
			</header>
			
			<div id="body">
				@RenderBody()					
			</div>
				
		</div>
			
		<footer id="footer">
			<div id="footertext">
				<nav class="col1-50">
					
					@*@Html.Partial("_Navigation")*@

                    <span class="navigation-list">Home</span> |
                    <span class="navigation-list">Orders</span> |
                    <span class="navigation-list">Administration</span>
					
				</nav>
				<div class="col2-50">
					
                    <span class="navigation-list">Version #@ViewBag.Version</span>
					
				</div>

                <small style="text-align: center;">
                    <span class="navigation-list">Developed By The College Of Agricultural And Environmental Science Dean's Office</span> |
