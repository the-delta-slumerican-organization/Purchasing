			</td>
			<td>
				@item.Justification
			</td>
			<td>
				@String.Format("{0:g}", item.DateCreated)
			</td>
			<td>
				@item.HasControlledSubstance
			</td>
			<td>
				@item.HasLineSplits
			</td>
