@using Purchasing.Web.Controllers

@model AdminListModel
           
@{
    ViewBag.Title = "Admins";
}

<section class="display-form">

    <header><div class="col1">Purchasing Administrators</div>
             <div class="col2">@Html.ActionLink("Create Admin", "ModifyAdmin", new {}, new {@class="button"})</div>
    </header>

    <div class="section-contents">
    
        <table class="datatable">
            <thead>
                <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Admins)
                {
                    <tr>
                        <td>@Html.ActionLink(user.Id, "ModifyAdmin", new { user.Id })</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@Html.ActionLink("Remove", "RemoveAdmin", new { user.Id })</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</section>


