@using Purchasing.Web.Controllers

@model AdminListModel
           
@{
    ViewBag.Title = "Admins";
}

<section class="display-form">

    <header><div class="col1">Purchasing Administrators</div>
             <div class="col2">@Html.ActionLink("Create Admin", "ModifyAdmin", new {}, new {@class="button"})</div>
    </header>

    <div class="section-contents">
    
        <table class="datatable">
            <thead>
                <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Admins)
                {
                    <tr>
                        <td><a href='@Url.Action("ModifyAdmin", new {user.Id})'><img src='@Url.Image("edit.png")'></a></td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td><a href='@Url.Action("RemoveAdmin", new {user.Id})'><img src='@Url.Image("delete.png")'></a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</section>


<section class="display-form">
    <header><div class="col1">Departmental Administrators</div>
            <div class="col2">@Html.ActionLink("Create Departmental Admin", "ModifyDepartmental", new {}, new {@class="button"})</div>
    </header>

    <div class="section-contents">
        <table class="datatable">
            <thead>
                <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.DepartmentalAdmins)
                {
                    <tr>
                        <td><a href='@Url.Action("ModifyDepartmental", new { user.Id })'><img src='@Url.Image("edit.png")'></a></td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td><a href='@Url.Action("RemoveDepartmental", new { user.Id })'><img src='@Url.Image("delete.png")'></a></td>
                    </tr>
                }
            </tbody>
        </table>    
    </div>
</section>