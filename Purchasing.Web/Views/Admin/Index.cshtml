@using Purchasing.Web.Controllers

@model AdminListModel
           
@{
    ViewBag.Title = "Admins";
}

<h2>Purchasing Administrators</h2>

@Html.ActionLink("Create Admin", "Create")
<table class="datatable">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Admins)
        {
            <tr>
                <td>@Html.ActionLink(user.Id, "Create", new {user.Id})</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

<br/>

